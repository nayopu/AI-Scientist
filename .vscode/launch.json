    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Social Deduction Game",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/templates/social_deduction_game/flex_social_deduction.py",
            "args": [
                "--spec",
                "blood_clocktower_full.json",
                "--plugin",
                "blood_clocktower_plugin.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/templates/social_deduction_game"
        },
        {
            "name": "Run Werewolf Game",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/templates/social_deduction_game/sdg_core.py",
            "args": [
                "--rules",
                "werewolf_rules",
                "--players",
                "3",
                "--model",
                "gpt-4"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/templates/social_deduction_game"
        }
    ]
}